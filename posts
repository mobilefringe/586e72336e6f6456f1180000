<script>
    $(document).ready(function(e){
        init(e);
        loadMallDataCached(renderPageData);
    });
    
    function renderPageData(){
        var posts = getPostList();
        renderPosts('#post_container', "#post_template", posts.reverse())
        show_content();
    }
</script>